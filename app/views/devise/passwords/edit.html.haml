.row
  .col-md-3
  .col-md-5
    #login-box
      .logo
        = image_tag 'towers.jpg', class: 'img-responsive img-circle center-block'
        %h1.logo-caption
          %span.tweak Change Your Password
      .controls
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
          = errors_for resource, false
          = f.hidden_field :reset_password_token
          .form-group
            = f.label :password
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            = f.password_field :password, autocomplete: "off", placeholder: 'password', class: 'form-control'
          .form-group
            = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'password confirmation', class: 'form-control'
          .form-group
            = recaptcha_tags
          .form-group.right
            = f.submit "Change My Password", class: 'btn btn-success'
        = render "devise/shared/links"
  .col-md-4
