.row
  .col-md-3
  .col-md-6
    .well
      %h2.center Forgot Your Password?
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = errors_for resource, false
        .form-group
          = f.label :email
          = f.email_field :email, autofocus: true, placeholder: 'email', class: 'form-control'
        .form-group.right
          = f.submit "Send Password Reset Instructions", class: 'btn btn-success'
        .form-group
          = flash[:recaptcha_error]
          = recaptcha_tags
      = render "devise/shared/links"
  .col-md-3
