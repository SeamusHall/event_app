.row
  .col-lg-12
    %h2 Roles
%div{style: "overflow-x:auto;"}
  %table.table
    %thead
      %tr
        %th Name
        %th Description
        %th
    %tbody
      - @roles.each do |role|
        %tr
          %td= role.name
          %td= role.description
          %td.right= object_actions role
.row
  .col-lg-12
    = link_to 'New Role', new_role_path, class: 'btn btn-success btn-large btn-block'
