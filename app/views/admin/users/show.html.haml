%h2 Show User

.row
  .col-md-12
    = image_tag @user.gravatar_url(secure: true)
.row
  %hr
  %p
    %strong Current Sign In:
    = @user.current_sign_in_at.strftime('%Y-%m-%dT%H:%M:%S%z') rescue ''
  %p
    %strong Locked At:
    = @user.locked_at.strftime('%Y-%m-%dT%H:%M:%S%z') rescue ''
  %p
    %strong Email:
    = @user.email

  = link_to 'Edit', edit_admin_user_path(@user), class: 'btn btn-warning'
  |
  = link_to 'Back', admin_users_path, class: 'btn btn-danger'
